            android:id = "@+id/btn_div"
            android:text="/"
            />
        <Button style="@style/size"
            android:id = "@+id/btn_reciprocal"
            android:text="1/x"
            />
        <Button style="@style/size"
            android:id = "@+id/btn_sqr"
            android:text="x^2"
            />
        <Button style="@style/size"
            android:id="@+id/btn_cube"
            android:text="x^3"
            />
        <Button style="@style/size"
            android:id = "@+id/btn_x_power_of_y"
            android:text="y^x"
            />

        <Button style="@style/size"
            android:id = "@+id/btn_1"
            android:text="1"
