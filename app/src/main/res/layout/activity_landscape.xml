            android:text="2"
            />

        <Button style="@style/size"
            android:id="@+id/btn_3"
            android:text="3" />
        <Button style="@style/size"
            android:id = "@+id/btn_mul"
            android:text="*"
            />
        <Button style="@style/size"
            android:id = "@+id/btn_factorial"
            android:text="x!"
            />
        <Button style="@style/size"
            android:id = "@+id/btn_square_root"
            android:text="√"
            />
        <Button style="@style/size"
            android:id = "@+id/btn_x_root"
            android:text="x√y"
            />
        <Button style="@style/size"
            android:id = "@+id/btn_lg"
            android:text="lg"
            />

        <Button style="@style/size"
            android:id = "@+id/btn_4"
            android:text="4"
            />
        <Button style="@style/size"

            android:id = "@+id/btn_5"
            android:text="5"
            />
        <Button style="@style/size"

            android:id = "@+id/btn_6"
            android:text="6"
            />
        <Button style="@style/size"
            android:id = "@+id/btn_sub"
            android:text="-"
            />
